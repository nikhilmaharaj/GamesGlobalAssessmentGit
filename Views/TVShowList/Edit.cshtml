@model GamesGlobalAssessment.Models.TVShow

@{
    ViewData["Title"] = "Edit";
}

<div class="well white">
    <form asp-action="Edit" style="background: url('@Url.Content("~/css/images/tv4.jpg")');">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row md-Padding-Top-100 align-center">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="display-4">Edit TV Show</h1>
            </div>
        </div>
        <div class="row md-Padding-Top-10 align-center">
        </div>
        <input type="hidden" asp-for="TVShowID" />
        <div class="row md-Padding-Top-50">
            <div class="col-md-1">
            </div>
            <div class="col-md-1">
                <label class="control-label md-Padding-Top-5"><b>Title</b></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Title" class="form-control" required="required" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-1">
            </div>
            <div class="col-md-1">
                <label class="control-label md-Padding-Top-5"><b>Year</b></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Year" class="form-control" required="required" onkeypress="return isNumber(event)" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-1">
            </div>
            <div class="col-md-1">
                <label class="control-label md-Padding-Top-5"><b>Created By</b></label>
            </div>
            <div class="col-md-2">
                <input asp-for="CreatedBy" class="form-control" required="required" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
        </div>
        <div class="row md-Padding-Top-70">
            <div class="col-md-2">
            </div>
            <div class="col-md-2">
                <input type="submit" id="btnSave" value="Save" class="btn btn-block btn-info" />
            </div>
        </div>
        <div class="row md-Padding-Top-170">
        </div>
        <div class="row md-Padding-Top-25">
        </div>
        <div class="row md-Padding-Top-170">
            <div class="col-md-2">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function isNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>
}