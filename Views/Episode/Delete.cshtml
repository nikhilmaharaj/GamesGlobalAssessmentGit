@model GamesGlobalAssessment.Models.Episode

@{
    ViewData["Title"] = "Delete";
}

<div class="well white">
    <form asp-action="Delete" style="background: url('@Url.Content("~/css/images/tv.jpg")');">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row md-Padding-Top-100 align-center">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="display-4">Remove Episode</h1>
            </div>
        </div>
        <div class="row md-Padding-Top-10 align-center">
        </div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-1">
            </div>
            <div class="col-md-1">
                <label class="control-label md-Padding-Top-5"><b>Episode Name</b></label>
            </div>
            <div class="col-md-2">
                <label asp-for="EpisodeName" class="form-control" disabled="disabled" />
                @Html.DisplayFor(model => model.EpisodeName)
            </div>
        </div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-1">
            </div>
            <div class="col-md-1">
                <label class="control-label md-Padding-Top-5"><b>Episode No</b></label>
            </div>
            <div class="col-md-2">
                <label asp-for="EpisodeNo" class="form-control" disabled="disabled" />
                @Html.DisplayFor(model => model.EpisodeNo)
            </div>
        </div>
        <div class="row md-Padding-Top-70">
            <div class="col-md-2">
            </div>
            <div class="col-md-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
        <div class="row md-Padding-Top-100">
        </div>
        <div class="row md-Padding-Top-170">
        </div>
        <div class="row md-Padding-Top-50">
        </div>
        <div class="row md-Padding-Top-80">
            <div class="col-md-2">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>
