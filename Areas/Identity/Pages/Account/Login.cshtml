@page
@model PetCareManagementSystem.Models.LoginViewModel

<div class="well white">
    <form id="account" method="post" style="background: url('@Url.Content("~/css/images/pet3.jpg")');">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-12">
                <h2>Login</h2>
            </div>
        </div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-1">
            </div>
            <div class="col-md-1">
                <label class="control-label md-Padding-Top-5"><b>Email</b></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Email" class="form-control" required="required" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-1">
            </div>
            <div class="col-md-1">
                <label class="control-label md-Padding-Top-5"><b>Password</b></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Password" class="form-control" required="required" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-1">
            </div>
            <div class="col-md-2">
                <label class="control-label md-Padding-Top-5"><b>Remember Me</b></label>
            </div>
            <div class="col-md-2 md-Padding-Top-5">
                <input class="form-check-input" style="width:20px;height:20px" asp-for="RememberMe" />
            </div>
        </div>
        <div class="row md-Padding-Top-50">
            <div class="col-md-2">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
        </div>
        <!--<div class="row md-Padding-Top-50">
            <div class="col-md-2">-->
                @*<p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>*@
                <!--<p>
                    <a asp-page="./Register" asp-route-returnUrl="">Register as a new user</a>
                </p>
            </div>
        </div>-->
        <div class="row md-Padding-Top-340">
            <div class="col-md-4">
                <label class="control-label md-Padding-Top-5"><b>Welcome to the PCM System, this system is used to manage Pets</b></label>
                <label class="control-label md-Padding-Top-5"><b>The Pet Care Management System is owned by Nik Solutions</b></label>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
